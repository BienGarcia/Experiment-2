#include<iostream>
#include <conio.h>

using namespace std;
int main()
{
	
	int x, y;
	float B = 35, z = 1.10, w = 20, m, n;
	
	cout<<"Previous Month Consumption: "; 
  	cin >> x;
	cout<<"Your Recent Consumption: "; 
 	cin >> y;
	
	m = B +(y * z);
	n = (B +(y * z)+(w*(y-x));
	if(x>y)
  	{
	cout << "Your water bill is: "<< n;
	}
	else
	{
	cout << "Your water bill is: "<< m;
	}

_getch();
return 0;
}
